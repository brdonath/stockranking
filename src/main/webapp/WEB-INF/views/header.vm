    //colorbox
    function goColorbox() {
        $(".inline").colorbox(
                {
                    onOpen: function () {
                        if ($('#mobilehidden').is(':hidden')) {
                            jQuery.colorbox.resize({width: '100%', height: '90%'});
                        }
                    },
                    onComplete: function () {
                        if ($('#mobilehidden').is(':hidden')) {
                            jQuery.colorbox.resize({width: '100%', height: '90%'});
                        }
                    },
                    inline: true,
                    width: "70%",
                    rel: 'group1',
                    scrolling: false,
                    current: ""
                });
    }

    $(document).ready(function() {
        goColorbox();
    });
</script>
