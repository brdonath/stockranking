                        if ($('#mobilehidden').is(':hidden')) {
                            jQuery.colorbox.resize({width:'100%', height:'90%'});
                        }
                    },
                    inline:true,
                    width:"70%",
                    rel:'group1',
                    scrolling:true,
                    current:""
                });
    });
</script>
